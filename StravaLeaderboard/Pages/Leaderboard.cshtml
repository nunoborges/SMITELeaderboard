@page
@model LeaderboardModel
@using jQWidgets.AspNetCore.Mvc.TagHelpers;
@{
    ViewData["Title"] = "Leaderboard";
}
<h2>@ViewData["Title"]</h2>
@{
    var activity = Model.pageactivities.FirstOrDefault();
}
<jqx-grid id="grid" altrows="true" alt-rows="true" show-status-bar="true" show-aggregates="false" filterable="true" pageable="true" auto-height="true" source-id="ID" sortable="true" width="400" source="Model">
    <jqx-grid-columns>
        <jqx-grid-column aggregates='[' count']' datafield-for="@(activity.Id)" width="20" text="ID"></jqx-grid-column>
        <jqx-grid-column aggregates='[' count']' datafield-for="@(activity.Name)" width="150" text="Name"></jqx-grid-column>
        <jqx-grid-column aggregates='[' count']' datafield-for="@(activity.Start_date)" width="100" text="Start Date"></jqx-grid-column>
        <jqx-grid-column aggregates='[' count']' datafield-for="@(activity.Athlete.FirstName)" width="40" text="Athlete Name" cells-format="c2" cells-align="HorizontalAlignment.Right"></jqx-grid-column>
        <jqx-grid-column aggregates='[' count']' datafield-for="@(activity.Athlete.Sex)" width="10" text="Gender" cells-align="HorizontalAlignment.Right"></jqx-grid-column>
        @*<jqx-grid-column aggregates='[' count']' datafield-for="@(activity.Athlete.SegmentLeaderboard[0].Rank)" width="10" text="Rank" cells-format="c2" cells-align="HorizontalAlignment.Right"></jqx-grid-column>*@
    </jqx-grid-columns>
</jqx-grid>
